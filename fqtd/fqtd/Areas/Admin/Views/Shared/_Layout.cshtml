<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - timdau.vn</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @* @Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/ckeditor/ckeditor.js"></script>
    <link rel="stylesheet" href="~/Content/admin.css" />
    <link rel="stylesheet" href="~/Content/login.css" />
</head>
<body>
    <header>
        <div class="logo">
            <p class="site-title"><a href="@Href("~/")">
                <img src="~/Images/logo_big1.png" width="170" /></a></p>
        </div>
        <div class="login">
            @Html.Partial("_LoginPartial")
            <div class="menu">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Search History", "Index", "SearchHistory")</li>
                        <li>@Html.ActionLink("Items", "Index", "Items")</li>
                        <li>@Html.ActionLink("Brands", "Index", "Brand")</li>
                        <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Properties", "Index", "Properties")</li>
                        <li>@Html.ActionLink("Contacts", "Index", "ContactUs")</li>
                        <li>@Html.ActionLink("SystemContents", "Index", "SystemContent")</li>
                    </ul>
                </nav>
            </div>
        </div>

    </header>
    <div id="body">
        @RenderSection("featured", required: false)
            @RenderBody()
        @StackExchange.Profiling.MiniProfiler.RenderIncludes()
    </div>
   @* <footer>
        <div class="content-wrapper">
            <div class="footer">
                <p>&copy; Timdau.vn</p>
            </div>
        </div>
    </footer>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/plugin")
    @RenderSection("scripts", required: false)
</body>
</html>
