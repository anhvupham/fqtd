@model fqtd.Areas.Admin.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<style>
    .login_title
    {
        width: 100%;
        height: 50px;
        text-align: center;
        vertical-align: middle;
        margin-top: 50px;
    }

    .login_content
    {
        width: 40%;
        margin-left: 30%;
    }
</style>
<div style="width: 100%">
    <div class="login_title">
        <h2>Login</h2>
    </div>
    <div class="login_content">
        <section id="loginForm">

            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <table style="width: 100%; border: none">
                    <tr>
                        <td>@Html.LabelFor(m => m.UserName)</td>
                        <td>
                            @Html.TextBoxFor(m => m.UserName)
                            @Html.ValidationMessageFor(m => m.UserName)</td>

                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(m => m.Password)</td>
                        <td>
                            @Html.PasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password)</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Log in" /></td>
                    </tr>
                </table>
    
            }
        </section>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
