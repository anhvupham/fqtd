@if (Model.PageCount > 1)
{
    <p>
        @if (Model.HasPreviousPage)
        {
            @Ajax.ActionLink("<< Trang đầu", "Index", new { page = 1, keyword = ViewBag.CurrentKeyword, CategoryID = ViewBag.CurrentCategoryID, BrandID = ViewBag.CurrentBrandI }, new AjaxOptions { UpdateTargetId = "main" }, new { @class = "navigabun" })
            
            @Ajax.ActionLink("< Trang trước", "Index", new { page = Model.PageNumber - 1, keyword = ViewBag.CurrentKeyword, CategoryID = ViewBag.CurrentCategoryID, BrandID = ViewBag.CurrentBrandI }, new AjaxOptions { UpdateTargetId = "main" }, new { @class = "navigabun" })
        }
        else
        {
            @:<a class="navigabun_dia"><< Trang đầu</a>
           
            @:<a class="navigabun_dia">< Trang trước</a>
    }

    
    @if (Model.HasNextPage)
    {
        @Ajax.ActionLink("  Trang sau >  ", "Index", new { page = Model.PageNumber + 1, keyword = ViewBag.CurrentKeyword, CategoryID = ViewBag.CurrentCategoryID, BrandID = ViewBag.CurrentBrandI }, new AjaxOptions { UpdateTargetId = "main" }, new { @class = "navigabun" })
       
        @Ajax.ActionLink(" Trang cuối >> ", "Index", new { page = Model.PageCount, keyword = ViewBag.CurrentKeyword, CategoryID = ViewBag.CurrentCategoryID, BrandID = ViewBag.CurrentBrandI }, new AjaxOptions { UpdateTargetId = "main" }, new { @class = "navigabun" })
    }
    else
    {
        @:<a class="navigabun_dia">Trang sau ></a>
      
        @:<a class="navigabun_dia">Trang cuối >></a>
    }
    </p>
}