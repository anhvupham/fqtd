@model fqtd.Areas.Admin.Models.Groups

@{
    ViewBag.Title = "Details";
    TempData.Keep();
}

<h2>Details</h2>

<fieldset>
    <legend>Groups</legend>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.GroupName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.GroupName)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.GroupName_EN)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.GroupName_EN)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.MarkerIcon)
    </div>
    <div class="display-field">
        <img src="@Href(System.Configuration.ConfigurationManager.AppSettings["GroupMarkerIconLocaion"] + "/" + Model.MarkerIcon)" width="50" />
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Keyword)
    </div>
    <div class="editor-field">
        @Html.DisplayNameFor(model => model.Keyword)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Description)
    </div>
    <div class="display-field">
        @Html.Raw(Model.Description)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Description_EN)
    </div>
    <div class="display-field">
        @Html.Raw(Model.Description_EN)
    </div>

</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.GroupID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
