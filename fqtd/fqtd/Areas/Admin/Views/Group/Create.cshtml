@model fqtd.Areas.Admin.Models.Groups

@{
    ViewBag.Title = "Create catetory";
    TempData.Keep();
}

@using (Html.BeginForm("Create", "Group", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <div class="content-editor">

        <div class="editor-label">
            Group Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GroupName)
            @Html.ValidationMessageFor(model => model.GroupName)
        </div>
        <div class="editor-label">
            GroupName(EN)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GroupName_EN)
            @Html.ValidationMessageFor(model => model.GroupName_EN)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Keyword)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Keyword, new { @id = "Keyword" })
        </div>
<div class="editor-label">
       
    </div>
    <div class="editor-field">
        @Html.CheckBoxFor(model => model.IsShow)
        @Html.ValidationMessageFor(model => model.IsShow)
        <label for="IsShow">      </label>
    </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field-htmleditor">
            @Html.TextAreaFor(model => model.Description, new { @id = "Description" })
            <script type="text/javascript">
                CKEDITOR.replace("Description");
            </script>
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
        </div>
        <div class="editor-field-htmleditor">
            <input type="submit" value="Create" />|
    @Html.ActionLink("Back to List", "Index", new { keyword = TempData["CurrentKeyword"], page = TempData["CurrentPage"] })
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
