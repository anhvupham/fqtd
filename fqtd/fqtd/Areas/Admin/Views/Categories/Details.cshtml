@model fqtd.Areas.Admin.Models.Categories

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Categories</legend>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.CategoryName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CategoryName)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.CategoryName_EN)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CategoryName_EN)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.MarkerIcon)
    </div>
    <div class="display-field">
        <img src="@Href(System.Configuration.ConfigurationManager.AppSettings["CategoryMarkerIconLocaion"] + "/" + Model.MarkerIcon)" width="50" />
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Description)
    </div>
    <div class="display-field">
        @Html.Raw(Model.Description)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Description_EN)
    </div>
    <div class="display-field">
        @Html.Raw(Model.Description_EN)
    </div>

</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
