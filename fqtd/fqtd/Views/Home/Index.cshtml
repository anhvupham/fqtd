@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/MasterHome.cshtml";
}
<div id="fb-root"></div>
<script>(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<div id="content_home">
    <div id="content">
        <div id="step1" class="inner">
            <form id="form2" action="result" method="get">
                <input id="form" type="hidden" style="width: 500px" value="0" name="form" />
                <div id="home_left">
                </div>
                <div id="home_center">
                    <table style="width: 100%; border: 0px; border-collapse: separate; border-spacing: 13px;">
                        <tr>
                            <td colspan="4">
                                <div>
                                    <input id="search" data-required="true" name="search" type="search" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td colspan="4" style="text-align: center">
                                <input type="submit" class="button" value="TÌM" id="btn_home2" /></td>
                        </tr>
                    </table>
                </div>
                <div id="home_right">
                    <div id="banmuontim">
                        <a class="next" href="#1" title="Bạn muốn tìm xung quanh một địa điểm xác định?">Bạn muốn tìm xung quanh<br />
                            bạn?
                        <img src="../images/icon_black.png" /></a>
                    </div>
                </div>
            </form>
        </div>
        <div id="step2" class="inner">
            <form id="form1" action="result" method="get">
                <input id="form" type="hidden" style="width: 500px" value="1" name="form" />
                <div id="home_left2">
                    <div id="banmuontim2">
                        <a class="pre" href="#0" title="Bạn muốn tìm một địa điểm bất kỳ?">Bạn muốn tìm một<br />
                            địa điểm bất kỳ?
                    <img src="../images/icon_black2.png" /></a>
                    </div>
                </div>
                <div id="home_center2">
                    <table style="width: 100%; border: 0px; border-collapse: separate; border-spacing: 13px;">
                        <tr>
                            <td colspan="3" style="width: 50px">
                                <div>
                                    <input id="address" data-required="true" name="address" type="search" />
                                </div>
                            </td>
                            <td style="width: 34px">
                                <a id="getCurrentPosition" href="JavaScript:void(0);" title="Geolocation chỉ hoạt động chính xác với các thiết bị di động như Điện thoại, Laptop, Máy tính bảng.">
                                    <img id="iconTarget" src="../images/icon1.png" /></a></td>
                        </tr>
                        <tr>
                            <td>
                                <div>
                                    <select data-required="true" id="category" name="category">
                                        <option>Loại</option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div>
                                    <select data-required="true" id="brand" name="brand">
                                        <option>Tên quán</option>
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div>
                                    <input id="range" name="range" data-required="true" data-pattern="^(?:R\$)?\s*(\d+)(?:[,\.](\d)(\d)?)?\d*$" type="search" />
                                </div>
                            </td>
                            <td>mét</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td colspan="4" style="text-align: center">
                                <input type="submit" class="button" value="TÌM" id="btn_home1" /></td>
                        </tr>
                    </table>
                </div>
                <div id="home_right2">
                </div>
            </form>
        </div>
    </div>
</div>
<ul class="hidden" id="index">
    <li class="active"><a href="JavaScript:void(0);">&nbsp;</a></li>
    <li><a href="JavaScript:void(0);">&nbsp;</a></li>
</ul>
<div id="facebook">
    <div class="fb-like" data-href="@ViewBag.URL" 
    data-send="false" data-width="260">
    </div>
</div>
<div class="notice"><marquee behavior="scroll" direction="left">Sắp ra mắt giao diện mobile.</marquee></div>
