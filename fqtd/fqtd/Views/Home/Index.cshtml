@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/MasterHome.cshtml";
}
<div id="fb-root"></div>
<script>(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<div class="container">
    <div id="myCarousel" class="carousel slide">
        <div class="carousel-inner">
            <div class="item active">
                <form id="form1" action="result" method="get" role="form">
                    <div class="row homepagerow">
                        <div class="col-xs-2">
                        </div>
                        <div class="col-xs-8">
                            <input id="search" data-required="true" name="search" type="search" class="form-control" placeholder="Nhập thông tin tìm kiếm" />
                        </div>
                        <div class="col-xs-2">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                        </div>
                        <div class="col-xs-4">
                            <p class="buttonGreen" id="btn_home1">TÌM</p>
                        </div>
                        <div class="col-xs-4">
                        </div>
                    </div>
                </form>
            </div>
            <div class="item">
                <form id="form2" action="result" method="get">
                    <div class="row homepagerowsmall">
                        <div class="col-xs-2">
                        </div>
                        <div class="col-xs-8">
                            <input id="address" data-required="true" name="address" type="search" class="form-control" placeholder="Nhập địa chỉ hiện tại của bạn hoặc sử dụng chức năng định vị bên cạnh" />
                        </div>
                        <div class="col-xs-2 text-left locationicon">
                            <a id="getCurrentPosition" href="JavaScript:void(0);" title="Chức năng định vị này chỉ hoạt động chính xác với các thiết bị dùng mạng wifi hoặc 3G/4G.">
                                <img id="iconTarget" src="../images/icon1.png" /></a>
                        </div>
                    </div>
                    <div class="row homepagerow">
                        <div class="col-xs-2">
                        </div>
                        <div class="col-xs-8">
                            <div class="row">
                                <div class="col-xs-4">
                                    <select id="category" name="category" class="form-control">
                                        <option value="">Loại</option>
                                    </select>
                                </div>
                                <div class="col-xs-4">
                                    <select data-required="true" id="brand" name="brand" class="form-control">
                                        <option value="">Tên quán</option>
                                    </select>
                                </div>
                                <div class="col-xs-4">
                                    <input id="range" name="range" data-required="true" data-pattern="^(?:R\$)?\s*(\d+)(?:[,\.](\d)(\d)?)?\d*$" type="search" class="form-control" placeholder="Nhập bán kính (mét)" /></div>
                            </div>
                        </div>
                        <div class="col-xs-2">                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                        </div>
                        <div class="col-xs-4">
                            <p class="buttonGreen" id="btn_home2">TÌM</p>
                        </div>
                        <div class="col-xs-4">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div>
</div>
<ul class="hidden" id="index">
    <li class="active"><a href="JavaScript:void(0);">&nbsp;</a></li>
    <li><a href="JavaScript:void(0);">&nbsp;</a></li>
</ul>
