@model fqtd.Areas.Admin.Models.ContactUS

@{
    ViewBag.Title = "Liên hệ";
    ViewBag.keywords = System.Configuration.ConfigurationManager.AppSettings["metakeywords"];
    ViewBag.description = System.Configuration.ConfigurationManager.AppSettings["metakeydescription"];
    Layout = "~/Views/Shared/MasterSub.cshtml";  
}
<div class="container contactus" itemscope itemtype="http://schema.org/ContactPage">
    <div class="row">
        <div class="col-xs-12">
            <h1>Liên hệ</h1>
            <p class="caption">Một bình luận? Một gợi ý? Một câu hỏi? Xin vui lòng liên hệ với chúng tôi. Chúng tôi sẽ phản hồi trong thời gian sớm nhất.</p>
            @using (Html.BeginForm("action", "controller", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)    
                <div class="form-group">
                    <label for="CustomerName" class="col-lg-2 control-label">Họ tên</label>
                    <div class="col-lg-10">@Html.TextBoxFor(model => model.CustomerName, new { @data_required = true, @class = "form-control", @placeholder = "Nhập họ tên của bạn" })
                        @Html.ValidationMessageFor(model => model.CustomerName)
                    </div>
                </div>
                <div class="form-group">
                    <label for="Phone" class="col-lg-2 control-label">Điện thoại</label>
                    <div class="col-lg-10">@Html.TextBoxFor(model => model.Phone, new { @data_required = true, @class = "form-control", @placeholder = "Nhập số điện thoại của bạn" })
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">@Html.TextBoxFor(model => model.Email, new { @data_required = true, @data_pattern = @"^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})\s*", @class = "form-control", @placeholder = "Nhập email của bạn" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    <label for="ContactTitle" class="col-lg-2 control-label">Tiêu đề</label>
                    <div class="col-lg-10">@Html.TextBoxFor(model => model.ContactTitle, new { @data_required = true, @class = "form-control", @placeholder = "Nhập tiêu đề liên lạc" })
                        @Html.ValidationMessageFor(model => model.ContactTitle)
                    </div>
                </div>
                <div class="form-group">
                    <label for="ContactContent" class="col-lg-2 control-label">Nội dung</label>
                    <div class="col-lg-10">@Html.TextAreaFor(model => model.ContactContent, new { @data_required = true, @class = "form-control", @placeholder = "Nhập nội dung liên lạc" })
                        @Html.ValidationMessageFor(model => model.ContactContent)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <input type="submit" class="buttonGreen" id="btn_guidi" value="Gửi đi" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script>
        jQuery(document).ready(function ($) {
            FQTD.initContactUs();
        });
    </script>
}
