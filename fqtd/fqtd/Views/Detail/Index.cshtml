@{
    Layout = "~/Views/Shared/MasterSub.cshtml";    
}
<div id="fb-root"></div>
<script>(function (d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
    fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<div class="container" itemscope itemtype="http://schema.org/Place">
    <div class="row rowspace">
        <div class="col-md-12">
            <div id="gioithieuchung">
                <img id="brandlogo" width="150px" itemprop="image" src="/Images/Logo/Brand/@ViewBag.Logo" />
                <h1 id="brandname" itemprop="name">@ViewBag.Title</h1>
                <div id="branddescription" class="less" itemprop="description">@Html.Raw(ViewBag.description)</div>
                <a id="showmoreDescription" href="javascript:void(0);">Xem thêm</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="row rowspace group" itemprop="address" itemscope itemtype="http://schema.org/PostalAddress">
                <div class="col-md-12 rowspacesmall">
                    <div class="row">
                        <div class="col-md-12 title_box">
                            THÔNG TIN ĐỊA ĐIỂM
                        </div>
                    </div>
                    <div class="row detailinfo">
                        <div class="col-sm-3 hidden-xs">
                            Địa chỉ
                        </div>
                        <div class="col-sm-9 col-xs-12">
                            <div id="txtaddress" itemprop="streetAddress">@Html.Raw(ViewBag.Address)</div>
                        </div>
                    </div>
                    <div class="row silverrow detailinfo">
                        <div class="col-sm-3 hidden-xs">
                            Điện thoại
                        </div>
                        <div class="col-sm-9">
                            <div id="txtphone" itemprop="telephone">@Html.Raw(ViewBag.Phone)</div>
                        </div>
                    </div>
                    <div class="row detailinfo">
                        <div class="col-sm-3 hidden-xs">
                            Giờ mở cửa
                        </div>
                        <div class="col-sm-9">
                            <div id="txtopentime" itemprop="openingHoursSpecification" itemscope itemtype="http://schema.org/Time">@Html.Raw(ViewBag.OpenTime)</div>
                        </div>
                    </div>
                    <div class="row silverrow detailinfo">
                        <div class="col-sm-3 hidden-xs">
                            Danh mục
                        </div>
                        <div class="col-sm-9">
                            <div id="txtcategory">@Html.Raw(ViewBag.Category)</div>
                        </div>
                    </div>
                    <div class="row detailinfo">
                        <div class="col-sm-3 hidden-xs">
                            Lần cập nhật gần nhất
                        </div>
                        <div class="col-sm-9">
                            <div id="txtlastupdate">@Html.Raw(ViewBag.LastUpdated)</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <img id="staticmap" class="img-responsive" src="@ViewBag.Map" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row rowspace group">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12 title_box">
                            CÙNG THƯƠNG HIỆU
                        </div>
                    </div>
                    <div class="row rowspacesmall">
                        <div class="col-md-12">
                            <div class="row" id="samebrand">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row rowspace group">
                <div class="col-md-12 facebook">
                    <div class="fb-comments" data-href="@ViewBag.URL" data-width="682" data-num-posts="10"></div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="row rowspace group">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12 title_box">
                            CÁC TIỆN ÍCH
                        </div>
                    </div>
                    <div class="row" id="tblproperty">
                    </div>
                </div>
            </div>
            <div class="row rowspace group">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12 title_box">
                            HÌNH ẢNH
                        </div>
                    </div>
                    <div class="row" id="tblimagegallery">
                    </div>
                </div>
            </div>
            <div class="row rowspace group">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12 title_box">
                            CÙNG THỂ LOẠI
                        </div>
                    </div>
                    <div class="row" id="tblSameCategory">
                    </div>
                </div>
            </div>
            <div class="row rowspace">
                <div class="col-md-12">
                    <!-- AddThis Button BEGIN -->
                    <div class="addthis_toolbox addthis_default_style addthis_32x32_style">
                        <a class="addthis_button_preferred_1"></a>
                        <a class="addthis_button_preferred_2"></a>
                        <a class="addthis_button_preferred_3"></a>
                        <a class="addthis_button_compact"></a>
                        <a class="addthis_counter addthis_bubble_style"></a>
                    </div>
                    <script type="text/javascript">var addthis_config = { "data_track_addressbar": true };</script>
                    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=anhvuphamx"></script>
                    <!-- AddThis Button END -->
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
        jQuery(document).ready(function ($) {
            FQTD.initDetail();
        });
    </script>
}