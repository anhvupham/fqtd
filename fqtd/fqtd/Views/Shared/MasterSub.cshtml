<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <title>@ViewBag.Title - timdau.vn</title>
    <meta name="description" content="@ViewBag.keywords" />
    <meta name="keywords" content="@ViewBag.description" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=1040" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/modernizr")
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDTNlc8mcX8hdGZpkkPK1NXVq1PJY1zYs0&sensor=false"></script>
</head>
<body>
    <header>
        <div id="header_subpage">
            <img id="logo_small" src="/images/logo_small1.png" />
            <div id="back_home">
                <img src="/images/icon_home.png" />
                <a href="/">Trang chủ</a>
            </div>
        </div>
    </header>
    <div id="wrapper">
        @RenderSection("featured", required: false)
        @RenderBody()
    </div>
    <footer>
        <div id="bottom" class="bottomHome">
            <div id="bottom_info">
                <div id="bottom_left">Copyright@2013 by Timdau.vn</div>
                <div id="bottom_right"><a href="~/home/contact"><strong>Liên hệ</strong></a>  |  <a href="~/home/introduction"><strong>Giới thiệu<strong></a>  |  <a href="~/home/termandconditionofuse"><strong>Điều khoản sử dụng<strong></a>  |  <a href="~/home"><strong>Chính sách bảo mật<strong></a> </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/plugin")
    @Scripts.Render("~/bundles/infobox")
    @Scripts.Render("~/bundles/utils")
    @RenderSection("scripts", required: false)
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-42438329-1', 'timdau.vn');
        ga('send', 'pageview');
    </script>
</body>
</html>
