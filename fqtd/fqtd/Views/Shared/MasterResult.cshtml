<!DOCTYPE html>
<html lang="vi">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <title>@ViewBag.Title - timdau.vn</title>
    <meta name="description" content="@ViewBag.description" />
    <meta name="keywords" content="@ViewBag.keywords" />
    <meta property="og:title" content="Tìm địa điểm với Tìmđâu.vn" />
    <meta property="og:url" content="http://timdau.vn" />
    <meta property="og:image" content="http://timdau.vn/images/logo_small1.png" />
    <meta property="og:site_name" content="Tìm đâu" />
    <meta property="og:type" content="tool" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/bootstrapcss")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")    
</head>
<body>
    <div id="wrapper">
        <header>
            <div class="navbar navbar-default navbar-static-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="/">
                            <img src="/images/logo_small1.png" class="img-responsive" />
                        </a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="/">Trang chủ</a></li>
                            <li><a href="~/home/introduction">Giới thiệu</a></li>
                            <li><a href="~/home/termandconditionofuse">Điều khoản sử dụng</a></li>
                            <li><a href="~/home/policy">Chính sách bảo mật</a></li>
                            <li><a href="~/home/contactus">Liên hệ</a></li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </header>

        @RenderSection("featured", required: false)
        @RenderBody()

    </div>
    <footer>
        <div id="footer">
            <div class="container">
                <p class="text-muted credit">Copyright 2013 by Timdau.vn</p>
            </div>
        </div>
    </footer>
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDTNlc8mcX8hdGZpkkPK1NXVq1PJY1zYs0&sensor=false"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/plugin")
    @Scripts.Render("~/bundles/infobox")
    @Scripts.Render("~/bundles/utils")
    @Scripts.Render("~/bundles/bootstrapjs")
    @RenderSection("scripts", required: false)
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-42438329-1', 'timdau.vn');
        ga('send', 'pageview');
    </script>
</body>
</html>
